<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSecondary"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">
        <ImageView
            style="@style/SettinsAnother"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="18dp"
            android:id="@+id/back"
            android:src="@drawable/arrow" />

        <TextView
            style="@style/SettinsAnother"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/settings"
            android:textSize="22sp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            />
    </FrameLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchDarkTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/night_theme"
        style="@style/SettingElement"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/share"
        style="@style/SettingElement"
        android:layout_width="match_parent"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/share"
        android:text="@string/share" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/support"
        style="@style/SettingElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/support"
        android:paddingVertical="20dp"
        android:text="@string/help" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/userAgreement"
        style="@style/SettingElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/right_arrow"
        android:text="@string/user_agreement" />
</LinearLayout>