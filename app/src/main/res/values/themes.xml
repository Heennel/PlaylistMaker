<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_background_main</item>
        <item name="colorSecondary">@color/white</item>
    </style>
    <style name="MessageTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:letterSpacing">-0.015</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_weight">@integer/button_weight</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconTint">@color/application_black</item>
    </style>
    <style name="ImageSettings">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/icon_margin_end</item>
        <item name="android:layout_marginTop">@dimen/icon_margin_top</item>
    </style>
    <style name="SettinsAnother">
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/grayTextOnEditText</item>
        <item name="android:textColorHint">@color/grayTextOnEditText</item>
        <item name="android:background">@drawable/background_edit_text_light</item>
    </style>
    <style name="SettingElement">
        <item name="thumbTint">@color/switchCircleLight</item>
        <item name="trackTint">@color/switchBackgroundLight</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ResetIconStyle">
        <item name="tint">@color/grayTextOnEditText</item>
    </style>
    <style name="TrackNameStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TrackDescriptionStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/grayText</item>
    </style>
    <style name="TrackRecImages">
    </style>

    <style name="NotFoundImage">
        <item name="android:src">@drawable/not_found_image</item>
    </style>
    <style name="ConnectionFailedImage">
        <item name="android:src">@drawable/connection_failed</item>
    </style>

    <style name="TextSearchActivity">
        <item name="android:textSize">@dimen/text_size_search</item>
        <item name="fontFamily">@font/ys_display_medium</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonSearchActivity">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:padding">6dp</item>
        <item name="android:text">@string/reload</item>
        <item name="cornerRadius">53dp</item>
    </style>
    
    <style name="HistoryButtonSearchStyle">
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="HistoryTextSearchStyle">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="DescriptionTextStyleÐ¡hangeable">
        <item name="android:textColor">@color/application_black</item>
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="DescriptionTextStyleFixed">
        <item name="android:textColor">@color/grayText</item>
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginTop">@dimen/audioplayer_description_margin</item>
    </style>
    <style name="TrackNameArtistStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="BackButtonStyle">
        <item name="android:tint">@color/application_black</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="SmallImageButtonStyle">
        <item name="android:backgroundTint">@color/circleButtonColorLight</item>
        <item name="android:background">@drawable/circle_gray</item>
    </style>
    <style name="BigImageButtonStyle">
        <item name="android:backgroundTint">@color/application_black</item>
        <item name="android:background">@drawable/circle_black</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="ProgressBar">
        <item name="android:indeterminateTint">@color/application_black</item>
    </style>
</resources>